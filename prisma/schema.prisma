  tag      SustainabilityTag @relation(fields: [tag_id], references: [id], onDelete: Cascade)

  @@id([store_id, tag_id])
  @@index([tag_id])
}

// ----------------------
// Amenities (Many-to-Many)
// ----------------------
model Amenity {
  id     String           @id @default(cuid())
  key    String           @unique // "kidsZone", "freeWifi", "evCharger", "petFriendly"
